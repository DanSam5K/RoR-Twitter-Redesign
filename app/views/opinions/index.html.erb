<div class="home-user">
  <div class="middle-section container">
    <div class="tweet-section">
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
      <h4>What's Happening?</h4>
      <div>
        <%= form_for @opinion do |opinion| %>
          <%= opinion.text_field :text, class:"tweet", id:"text"%>
          <%= opinion.submit "Tweet", class: "btn text-btn" %>
        <% end %>
      </div>
    </div>
    <div class="new-tweets">
      <h4> NEW OPINIONS </h4>
      <% Opinion.newsfeed_opinions.each do |opinions|%>
      <div class="tweet-box d-flex flex-row mt-3">
          <div class="author">
          <%= show_photo(opinions.author, 'side-photo')%>
          </div> 
          <div class="tweet-content">
              <h6><strong><%= link_to opinions.author.fullname, user_path(opinions.author.username), class: "text-dark" %> </strong></h6>
              <div class="d-flex flex-row justify-content-around">
                  <p class="card-text"><%= opinions.text %> 
                  <span class='post-date'> <%= opinions.created_at.strftime("%Y/%m/%d") %> </span> 
                  <%= like_or_dislike_btn(opinions) %> </p>
              </div>
          </div>
      </div>
      <% end %>      
    </div>
  </div>
  <div class="rightbar-home">
    <h4>WHO TO FOLLOW</h4>
    <% current_user.not_following.each do |f| %>
      <div class="user-section">
        <div class="user-photo">
          <%= avatar_for(f) %>
        </div>  
        <div class="user-details">
          <%= link_to f.username, user_path(f.id) %>
          <%= f.fullname %>
        </div>
      </div>
    <% end %>
  </div>
</div>






